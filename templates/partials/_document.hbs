<div class="document">
  <h3>Document</h3>

  {{#if id}}
    <input type="hidden" name="document[{{#if index}}{{index}}{{else}}{{@index}}{{/if}}][id]" value="{{id}}"/>
  {{/if}}

  <label>
    Title <input name="document[{{#if index}}{{index}}{{else}}{{@index}}{{/if}}][title]" value="{{title}}"/>
  </label>

  <label>
    Head
    <textarea name="document[{{#if index}}{{index}}{{else}}{{@index}}{{/if}}][head]" rows="10">{{head}}</textarea>
  </label>

  <label>
    Body
    <textarea name="document[{{#if index}}{{index}}{{else}}{{@index}}{{/if}}][body]" rows="10">{{body}}</textarea>
  </label>
</div>