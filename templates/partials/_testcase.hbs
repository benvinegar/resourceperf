{{#if id}}
  <input type="hidden" name="id" value="{{id}}"/>
{{/if}}

<div class="form-group required">
  <label for="testcase-name" class="control-label col-sm-2">Name</label>
  <div class="col-sm-10">
    <input type="text" name="name" value="{{name}}" class="form-control" id="testcase-name" required/>
  </div>
</div>

<div class="form-group required">
  <label for="testcase-slug" class="control-label col-sm-2">Slug</label>
  <div class="col-sm-10">
    <input type="text" name="slug" value="{{slug}}" class="form-control" id="testcase-slug" required/>
  </div>
</div>

<div class="form-group">

  <label for="testcase-desc" class="control-label col-sm-2">Description</label>
  <div class="col-sm-10">
    <textarea name="desc" rows="4" class="form-control" id="testcase-desc">{{desc}}</textarea>
  </div>
</div>